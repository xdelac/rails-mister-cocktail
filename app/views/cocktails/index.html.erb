<div class="banner">
  <div class="banner-content">
    <h2 style="text-align:center;">Mister Cocktails</h2>
    <p style="text-align:center;">Awesome beverages</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-warning btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
